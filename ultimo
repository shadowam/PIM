int IDcont=1, ultimo_livro;

typedef struct registro {
    char titulo[100];
    char autor[100];
    char genero[100];
    char editora[100];
    char status[25];
    char ISBN[10];
    int edicao;
    int ID;
    int paginas;
    float aval;
} livros;

livros book[100];

