        printf("%s", book[20].genero);
        gotoxy(26, 24);
        printf("%s", book[20].editora);
        gotoxy(25, 27);
        printf("%d", book[20].edicao);
        gotoxy(26, 30);
        printf("%d", book[20].paginas);
