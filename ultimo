// INICIO DA FUNÇÃO PARA CADASTRAR NOVO LIVRO
void cadastrar()
{
    clrscr();
    cabecalho();
    rodape();

    //char contador;  //contador
    char setas;  //variável usada para captura de tecla

    while (setas != ESC) {
        mostradados();
        setas=getch();
    /*
        contador=getch();

        if (contador==ENTER) {
            gotoxy(24,18);
            scanf("%s", &contador);

            contador=getch();

            if (contador==ENTER) {
                gotoxy(25,21);
                scanf("%s", &contador);
            }

    */
    }

    if (setas == ESC) {
        return;
    }
}
