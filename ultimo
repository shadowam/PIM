                        printf("\n\n%s\n\n", pesqLivro);

                        setas=getch();
                        if(setas==ESC)
                            break;
                    } while(setas!=ESC);
                }

                else if(setas==ACIMA)
                    contador=3;
                else if(setas==ABAIXO)
                    contador++;
                break;
            /*
                fgets(pesqLivro, sizeof(pesqLivro), stdin);

                for(j=1; j<IDcont; j++)
                {
