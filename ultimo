                        printf("%d", book[j].edicao);
                        gotoxy(26, 30);
                        printf("%d", book[j].paginas);
                        gotoxy(23, 33);
                        printf("%s", book[j].ISBN);

                        printf("\n\nID: %d", book[j].ID);
